{
  "name": "spoosh-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:docs": "pnpm --filter @spoosh/docs dev",
    "build:docs": "pnpm --filter @spoosh/docs build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "publish:dry": "pnpm -r publish --dry-run --access public --no-git-checks",
    "publish:alpha": "pnpm -r publish --access public --tag alpha",
    "publish:beta": "pnpm -r publish --access public --tag beta",
    "publish:latest": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.1.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/expect": "^4.0.17",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.17"
  }
}
